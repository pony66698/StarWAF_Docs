{
    "compilerOptions": {
        "lib": [
            "es7",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2018",
        "skipLibCheck": true,
        "experimentalDecorators": true
    },
    "compileOnSave": true,
    "include": [
        "src"
    ]
}
